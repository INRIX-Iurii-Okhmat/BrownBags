<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iuriio.apps.asyncandroid.app.PatientWaitFragment">

    <Button android:id="@+id/message_queue_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start message queue">

    </Button>

    <TextView android:id="@+id/message_queue_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press start to start"/>

</LinearLayout>
