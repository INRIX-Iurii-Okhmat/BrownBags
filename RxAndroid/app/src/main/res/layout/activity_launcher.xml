<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iuriioapps.rxandroid.LauncherActivity">

    <Button
        android:id="@+id/btn_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple"/>

    <Button
        android:id="@+id/btn_android_io"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Scheduler"/>

    <Button
        android:id="@+id/btn_lifecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lifecycle"/>

    <Button
        android:id="@+id/btn_rx_bindings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bindings"/>

    <Button
        android:id="@+id/btn_custom_operators"
        android:text="Custom Operators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
